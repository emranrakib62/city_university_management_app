<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <soup.neumorphism.NeumorphCardView
            app:neumorph_shadowColorDark="@color/purple_200"
            app:neumorph_shadowColorLight="#FFD740"
            android:layout_marginTop="25sp"
            android:id="@+id/button1"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            app:neumorph_shapeType="flat"
            app:neumorph_shadowElevation="6dp"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_cornerFamily="rounded"
            app:neumorph_cornerSize="16dp"
            app:neumorph_lightSource="leftTop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faculty of Science and Engineering"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />


                </LinearLayout>

            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>


        <soup.neumorphism.NeumorphCardView
            app:neumorph_shadowColorDark="@color/purple_200"
            app:neumorph_shadowColorLight="#FFD740"
            android:layout_marginTop="25sp"
            android:id="@+id/button2"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            app:neumorph_shapeType="flat"
            app:neumorph_shadowElevation="6dp"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_cornerFamily="rounded"
            app:neumorph_cornerSize="16dp"
            app:neumorph_lightSource="leftTop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faculty of Business And Economics"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />


                </LinearLayout>

            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>




        <soup.neumorphism.NeumorphCardView
            app:neumorph_shadowColorDark="@color/purple_200"
            app:neumorph_shadowColorLight="#FFD740"
            android:layout_marginTop="25sp"
            android:id="@+id/button3"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            app:neumorph_shapeType="flat"
            app:neumorph_shadowElevation="6dp"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_cornerFamily="rounded"
            app:neumorph_cornerSize="16dp"
            app:neumorph_lightSource="leftTop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faculty of Arts and Social Science"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />


                </LinearLayout>

            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            app:neumorph_shadowColorDark="@color/purple_200"
            app:neumorph_shadowColorLight="#FFD740"
            android:layout_marginTop="25sp"
            android:id="@+id/button4"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="102dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            app:neumorph_shapeType="flat"
            app:neumorph_shadowElevation="6dp"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_cornerFamily="rounded"
            app:neumorph_cornerSize="16dp"
            app:neumorph_lightSource="leftTop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faculty of Agriculture"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black" />


                </LinearLayout>

            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>



    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>