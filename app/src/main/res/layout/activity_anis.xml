<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".ActivityAnis">

    <!-- Round Profile Card -->
    <soup.neumorphism.NeumorphCardView
        android:id="@+id/profileCard"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        app:neumorph_shapeType="flat"
        app:neumorph_shadowColorDark="@color/lavender"
        app:neumorph_shadowColorLight="@color/purple_200"
        app:neumorph_lightSource="leftTop"
        app:neumorph_backgroundColor="@android:color/white"
        app:neumorph_cornerFamily="rounded"
      >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImage"
            android:layout_width="96dp"

            android:layout_height="96dp"
            android:src="@drawable/anis"
            app:civ_border_width="0dp"
            app:civ_border_color="#102180"/>





    </soup.neumorphism.NeumorphCardView>

    <!-- Info Card -->
    <soup.neumorphism.NeumorphCardView
        android:id="@+id/myNeumorphCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:neumorph_shapeType="flat"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shadowColorLight="#DEEF38"
        app:neumorph_shadowColorDark="#11E949"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_backgroundColor="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Engr S M Anisur Rahman"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/textViewDesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Associate Professor and Head"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:paddingBottom="16dp" />

            <TextView
                android:id="@+id/textViewContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="anis972@gmail.com"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>

    <!-- Scrollable Details -->
    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:padding="12dp"
        app:neumorph_shapeType="flat"
        app:neumorph_shadowElevation="6dp"
        app:neumorph_shadowColorLight="#FFFFFF"
        app:neumorph_shadowColorDark="#A3B1C6"
        app:neumorph_backgroundColor="#E0E0E0"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Faculty and Department -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty and Department Affiliation"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty of Science and Engineering\nDepartment of Computer Science and Engineering"
                    android:paddingBottom="16dp" />

                <!-- Degrees -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Degrees and Universities Attended"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MSc in CSE from BUP\nBSc in CSE from DU\nHSC and SSC from Jhenidah Cadet College"
                    android:paddingBottom="16dp" />

                <!-- Short Introduction -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Short Introduction"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Engr S M Anisur Rahman is currently Associate Professor and Head at the Department of CSE, City University. With 12+ years of experience, he is a member of IEEE, IEB, and JEXCA."
                    android:paddingBottom="16dp" />

                <!-- Teaching Experience -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teaching Experience"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Associate Professor, City University\n2. BIMRAD, Research Director\n3. Associate Professor, MIST\n4. Assistant Professor, MIST\n5. Senior Lecturer, BNS TITUMIR\n6. Lecturer, BNS ISSA KHAN"
                    android:paddingBottom="16dp" />

                <!-- Research Interest -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Research Interest"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HCI, Software Engineering, Operating Systems, Architecture, Security"
                    android:paddingBottom="16dp" />

                <!-- Publications -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publications"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. ML and IoT in conservation\n2. Performance of website design methods"
                    android:paddingBottom="16dp" />
            </LinearLayout>
        </ScrollView>
    </soup.neumorphism.NeumorphCardView>
</LinearLayout>
