<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DepartmentActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <soup.neumorphism.NeumorphCardView
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="50dp"
            android:id="@+id/button20"
            android:layout_width="360dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:neumorph_lightSource="leftTop"
            app:neumorph_shadowElevation="5dp"
            app:neumorph_shapeType="flat"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_cornerFamily="rounded"
            app:neumorph_cornerSize="16dp"
            app:neumorph_shadowColorDark="@color/purple_500"
            app:neumorph_shadowColorLight="@color/black"

            tools:ignore="MissingConstraints"
            >

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.CSE DEPARTMENT"
                android:textSize="23sp"
                android:textColor="@android:color/black" />



        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="30dp"
            android:id="@+id/button21"
            android:layout_width="360dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:neumorph_lightSource="leftTop"
            app:neumorph_shadowElevation="5dp"
            app:neumorph_shapeType="flat"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_cornerFamily="rounded"
            app:neumorph_cornerSize="16dp"
            app:neumorph_shadowColorDark="@color/purple_500"
            app:neumorph_shadowColorLight="@color/black"

            tools:ignore="MissingConstraints"
            >

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.EEE DEPARTMENT"
                android:textSize="23sp"
                android:textColor="@android:color/black" />



        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="30dp"
            android:id="@+id/button22"
            android:layout_width="360dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:neumorph_lightSource="leftTop"
            app:neumorph_shadowElevation="5dp"
            app:neumorph_shapeType="flat"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_cornerFamily="rounded"
            app:neumorph_cornerSize="16dp"
            app:neumorph_shadowColorDark="@color/purple_500"
            app:neumorph_shadowColorLight="@color/black"

            tools:ignore="MissingConstraints"
            >

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.CIVIL DEPARTMENT"
                android:textSize="23sp"
                android:textColor="@android:color/black" />



        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="30dp"
            android:id="@+id/button23"
            android:layout_width="360dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:neumorph_lightSource="leftTop"
            app:neumorph_shadowElevation="5dp"
            app:neumorph_shapeType="flat"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_cornerFamily="rounded"
            app:neumorph_cornerSize="16dp"
            app:neumorph_shadowColorDark="@color/purple_500"
            app:neumorph_shadowColorLight="@color/black"

            tools:ignore="MissingConstraints"
            >

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.MECHANICAL  DEPARTMENT"
                android:textSize="23sp"
                android:textColor="@android:color/black" />



        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="30dp"
            android:id="@+id/button24"
            android:layout_width="360dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:neumorph_lightSource="leftTop"
            app:neumorph_shadowElevation="5dp"
            app:neumorph_shapeType="flat"
            app:neumorph_backgroundColor="@color/white"
            app:neumorph_cornerFamily="rounded"
            app:neumorph_cornerSize="16dp"
            app:neumorph_shadowColorDark="@color/purple_500"
            app:neumorph_shadowColorLight="@color/black"

            tools:ignore="MissingConstraints"
            >

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.TEXTILE DEPARTMENT"
                android:textSize="23sp"
                android:textColor="@android:color/black" />



        </soup.neumorphism.NeumorphCardView>
    </LinearLayout>

</LinearLayout>
