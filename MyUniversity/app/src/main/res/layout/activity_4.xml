<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/purple_200"
            android:text="Faculty of Science and Engineering"
            android:textColor="#0B155F"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button

            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/purple_200"
            android:id="@+id/button2"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:text="Faculty of Business and Economics"
            android:textColor="#4527A0"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/purple_200"
            android:id="@+id/button3"
            android:clickable="true"
            android:layout_marginTop="15dp"


            android:text="Faculty of Arts and Social Science"
            android:textColor="#063B5D"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/purple_200"
            android:id="@+id/button4"
            android:clickable="true"
            android:layout_marginTop="15dp"

            android:text="Faculty of Agriculture"
            android:textColor="#11140B"
            android:textSize="30sp"
            android:textStyle="bold" />



    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>