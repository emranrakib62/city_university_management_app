<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activity31">

    <!-- Heading -->
    <TextView
        android:id="@+id/heading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="City University Residential Halls"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/heading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City University provides 4 residential halls with excellent facilities to ensure a comfortable and secure living experience for its students:\n\n"
                android:textSize="16sp" />

            <!-- Accommodation Details -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 24/7 Security: Ensuring safety and peace of mind.\n- High-Speed Wi-Fi: Stay connected for academic and personal needs.\n- Electricity and Water Supply: Continuous and reliable service.\n- Clean and Well-Maintained Rooms: Regular cleaning services provided.\n- Study Areas: Dedicated spaces for uninterrupted study.\n- Recreational Spaces: Common rooms and facilities for relaxation and socialization.\n- Laundry Services: Convenient and affordable laundry options.\n- Prayer Rooms: Separate spaces for prayers and spiritual activities.\n"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accommodation Details:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- 2 halls for males\n- 2 halls for females\n"
                android:textSize="16sp" />

            <!-- Costs -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Costs:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Monthly Living Cost: 1,100 BDT (covers lodging only)\n- Food Costs: Additional, as meals are arranged outside the campus.\n"
                android:textSize="16sp" />

            <!-- Facilities -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Facilities Provided:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Convenient Location -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convenient Location:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The halls are located close to the main campus, making it easy to attend classes and access campus facilities."
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
